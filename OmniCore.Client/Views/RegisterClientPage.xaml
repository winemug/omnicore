<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OmniCore.Client.ViewModels"
             x:Class="OmniCore.Client.Views.RegisterClientPage"
             Title="RegisterClientPage">
    <VerticalStackLayout x:DataType="vm:RegisterClientModel">
        <Label>Email</Label>
        <Editor Text="{Binding Email}" IsEnabled="{Binding EntryEnabled}"/>
        <Label>Password</Label>
        <Editor Text="{Binding Password}" IsEnabled="{Binding EntryEnabled}"/>

        <Button Text="Login" IsEnabled="{Binding EntryEnabled}" Command="{Binding RegisterClientCommand}"/>
        <Label>...</Label>
        <Button Text="Create Account" IsEnabled="{Binding EntryEnabled}" Command="{Binding CreateAccountCommand}" />
    </VerticalStackLayout>
</ContentPage>