<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmniCore.Client.Views.AuthenticationPage"
             xmlns:vm="clr-namespace:OmniCore.Client.ViewModels"
             Title="Authentication" x:DataType="vm:AuthenticationModel" Padding="12">
    <VerticalStackLayout>
        <Label Text="Enter credentials"/>
        <Entry Text="{Binding Email}" Placeholder="email@domain"/>
        <Entry IsPassword="True" Text="{Binding Password}" Placeholder="Password"/>
        <Button Text="Continue" HorizontalOptions="End" Command="{Binding LoginCommand}"/>
        <ActivityIndicator IsRunning="{Binding }" Color="Red"/>
    </VerticalStackLayout>
</ContentPage>