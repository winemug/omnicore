<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmniCore.Maui.Views.TestPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="15" Margin="30" Spacing="30">
            <Button Text="Stop" Command="{Binding StopCommand}" WidthRequest="100" HorizontalOptions="Center"/>
            <Label Text="{Binding StatusText}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>