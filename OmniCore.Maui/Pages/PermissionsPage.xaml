<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:OmniCore.Maui.Models"
             x:Class="OmniCore.Maui.Pages.PermissionsPage"
             x:DataType="models:PermissionsModel">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Bluetooth"/>
            <Label Text="{Binding Permission1Status}"/>
            <Button Text="Ax" Command="{Binding RequestPermission1Command}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Notifications"/>
            <Label Text="{Binding Permission2Status}"/>
            <Button Text="Ax" Command="{Binding RequestPermission2Command}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>