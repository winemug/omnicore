<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OmniCore.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:OmniCore.Maui.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="OmniCore">

    <ShellContent
        Title="Welcome"
        Icon="{StaticResource IconDashboard}"
        ContentTemplate="{DataTemplate pages:WelcomePage}"
        Route="welcome" />

    <ShellContent
        Title="Permissions"
        Icon="{StaticResource IconRibbon}"
        ContentTemplate="{DataTemplate pages:PermissionsPage}"
        Route="permissions" />
    
</Shell>
